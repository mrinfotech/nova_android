<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:weightSum="3"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/storenametxt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.3"
            android:text="Store1"
            android:textColor="@color/light_black"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginRight="10dp">

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/switchcompatid"
                android:layout_width="match_parent"
                app:switchMinWidth="56dp"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:theme="@style/Color1SwitchStyle"
                android:visibility="gone"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/activeswitchimageviw"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/activeswitch"/>
                <ImageView
                    android:id="@+id/inactiveswithimageview"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/inactiveswitch"
                    android:visibility="gone"/>
            </LinearLayout>
        </LinearLayout>
      </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:layout_marginTop="3dp"
        android:background="@color/lightgray"></View>
</LinearLayout>
