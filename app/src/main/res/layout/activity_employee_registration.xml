<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottom"
        android:scrollbars="none"
        android:padding="25dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Spinner
                android:id="@+id/designation_spinner"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:entries="@array/designation_spinner"
                android:background="@drawable/dropdownimagevalnew"/>

            <android.support.design.widget.TextInputLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

            <EditText
                android:id="@+id/first_name"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/edittext"
                android:hint="First Name"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:textColor="@color/light_black"
                android:textSize="14sp" />
            </android.support.design.widget.TextInputLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/appbackground"></View>

            <android.support.design.widget.TextInputLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">
            <EditText
                android:id="@+id/last_name"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/edittext"
                android:hint="Last Name"

                android:paddingLeft="10dp"
                android:singleLine="true"
                android:textColor="@color/light_black"
                android:textSize="14sp" />
            </android.support.design.widget.TextInputLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/appbackground"></View>
            <android.support.design.widget.TextInputLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

            <EditText
                android:id="@+id/mobile"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/edittext"
                android:hint="Mobile"
                android:inputType="phone"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:textColor="@color/light_black"
                android:textSize="14sp" />

            </android.support.design.widget.TextInputLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/appbackground"></View>

            <android.support.design.widget.TextInputLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/edittext"
                android:hint="Email"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:textColor="@color/light_black"
                android:textSize="14sp" />
            </android.support.design.widget.TextInputLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/appbackground"></View>

            <android.support.design.widget.TextInputLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

            <EditText
                android:id="@+id/date"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/edittext"
                android:clickable="false"
                android:cursorVisible="false"
                android:drawableRight="@drawable/ic_date_range_white_36dp"
                android:editable="false"
                android:hint="DOB"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:textColor="@color/light_black"
                android:textSize="13sp" />
            </android.support.design.widget.TextInputLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/appbackground"></View>

            <LinearLayout
                android:id="@+id/address_proof1linear"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:weightSum="3">

                <EditText
                    android:id="@+id/address_proof1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@drawable/edittext"
                    android:cursorVisible="false"
                    android:editable="false"
                    android:ellipsize="end"
                    android:hint="@string/attachaddressproof1"
                    android:paddingLeft="10dp"
                    android:singleLine="true"
                    android:textColor="@color/light_black"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="right">

                    <Button
                        android:id="@+id/attach_address1"
                        android:layout_width="100dp"
                        android:layout_height="29dp"
                        android:layout_gravity="center"
                        android:background="@drawable/browsebtnbg"
                        android:text="@string/attachaddressproof"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="11sp" />


                </LinearLayout>
            </LinearLayout>

            <View
                android:id="@+id/address_proof1linearview"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/appbackground"></View>


            <LinearLayout
                android:id="@+id/address_proof2linear"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:weightSum="3">

                <EditText
                    android:id="@+id/address_proof2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@drawable/edittext"
                    android:cursorVisible="false"
                    android:editable="false"
                    android:ellipsize="end"
                    android:hint="@string/attachaddressproof2"
                    android:paddingLeft="10dp"
                    android:singleLine="true"
                    android:textColor="@color/light_black"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="right">

                    <Button
                        android:id="@+id/attach_address2"
                        android:layout_width="100dp"
                        android:layout_height="28dp"
                        android:layout_gravity="center"
                        android:background="@drawable/browsebtnbg"
                        android:text="@string/attachaddressproof"
                        android:textAllCaps="false"
                        android:textSize="11sp"
                        android:textColor="@color/white" />

                </LinearLayout>
            </LinearLayout>

            <View
                android:id="@+id/address_proof2linearview"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/appbackground"></View>

            <LinearLayout
                android:id="@+id/locationlinear"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:weightSum="3">

                <EditText
                    android:id="@+id/location"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@drawable/edittext"
                    android:cursorVisible="false"
                    android:editable="false"
                    android:ellipsize="end"
                    android:hint="@string/store_location"
                    android:paddingLeft="10dp"
                    android:singleLine="true"
                    android:textColor="@color/light_black"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="right">

                    <Button
                        android:id="@+id/add_location"
                        android:layout_width="100dp"
                        android:layout_height="28dp"
                        android:layout_gravity="center"
                        android:background="@drawable/browsebtnbg"
                        android:text="Add Location"
                        android:textAllCaps="false"
                        android:textSize="11sp"
                        android:textColor="@color/white" />

                </LinearLayout>
            </LinearLayout>

            <View
                android:id="@+id/locationlinearview"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/appbackground"></View>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Address"
                android:textColor="@color/light_black"
                android:textSize="14sp" />

             <EditText
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/border_edittext"
                android:gravity="top|left"
                android:paddingLeft="5dp"
                android:textColor="@color/light_black"
                android:textSize="14sp" />

        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center">

        <Button
            android:id="@+id/save_btn"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/appcolorbuttonbg"
            android:text="@string/savedetails"
            android:textAllCaps="false"
            android:textColor="@color/white" />
    </RelativeLayout>
</RelativeLayout>