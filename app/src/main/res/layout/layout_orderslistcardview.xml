<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:cardview="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="3dp"
    android:layout_marginRight="3dp"
    android:layout_marginTop="5dp"
    android:foreground="?attr/selectableItemBackground"
    app:cardBackgroundColor="@color/white"
    app:cardPreventCornerOverlap="false"
    cardview:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginTop="5dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2">
            <TextView
                android:id="@+id/orderidtext"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.55"
                android:textSize="14sp"
                android:gravity="left"
                android:textColor="@color/light_black"
                android:text="Order Id" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:text=":"
                android:gravity="center"
                android:textSize="14sp"
                android:textColor="@color/lightgray"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/orderid"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.2"
                android:textSize="14sp"
                android:gravity="left"
                android:textColor="@color/light_black" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/dealaerlinear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:layout_marginTop="3dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.55"
                android:textSize="14sp"
                android:gravity="left"
                android:textColor="@color/light_black"
                android:text="Dealer" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:text=":"
                android:gravity="center"
                android:textSize="14sp"
                android:textColor="@color/lightgray"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/dealer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.2"
                android:textSize="14sp"
                android:gravity="left"
                android:textColor="@color/light_black"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:layout_marginTop="3dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.55"
                android:textSize="14sp"
                android:gravity="left"
                android:textColor="@color/light_black"
                android:text="Order date" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:text=":"
                android:gravity="center"
                android:textSize="14sp"
                android:textColor="@color/lightgray"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/dateval"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.2"
                android:textSize="14sp"
                android:gravity="left"
                android:textColor="@color/light_black"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:layout_marginTop="3dp">
            <TextView
                android:id="@+id/ordertakenbytitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.55"
                android:textSize="14sp"
                android:gravity="left"
                android:textColor="@color/light_black"
                android:text="Order taken by" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:text=":"
                android:gravity="center"
                android:textSize="14sp"
                android:textColor="@color/lightgray"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/ordertakenby"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.2"
                android:textSize="14sp"
                android:gravity="left"
                android:textColor="@color/light_black"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:layout_marginTop="3dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.55"
                android:textSize="14sp"
                android:gravity="left"
                android:textColor="@color/light_black"
                android:text="Payment type" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:text=":"
                android:gravity="center"
                android:textSize="14sp"
                android:textColor="@color/lightgray"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/paymenttype"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.2"
                android:textSize="14sp"
                android:gravity="left"
                android:textColor="@color/light_black"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:layout_marginTop="3dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.55"
                android:textSize="14sp"
                android:gravity="left"
                android:textColor="@color/light_black"
                android:text="Credit date" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:text=":"
                android:gravity="center"
                android:textSize="14sp"
                android:textColor="@color/lightgray"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/creditdate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:textSize="14sp"
                android:gravity="left"
                android:textColor="@color/light_black" />
            
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.65"
                android:gravity="center">
                <Button
                    android:id="@+id/viewbtn"
                    android:layout_width="wrap_content"
                    android:layout_height="33dp"
                    android:text="View"
                    android:textAllCaps="false"
                    android:background="@drawable/appcolorbuttonbg"
                    android:textSize="12sp"
                    android:textColor="@color/white"/>

            </LinearLayout>
            
            
        </LinearLayout>




        <!--<LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:paddingBottom="10dp">
            <Button
                android:id="@+id/viewbtn"
                android:layout_width="wrap_content"
                android:layout_height="33dp"
                android:text="View"
                android:textAllCaps="false"
                android:background="@drawable/appcolorbuttonbg"
                android:textSize="12sp"
                android:textColor="@color/white"/>
        </LinearLayout>-->
    </LinearLayout>
</android.support.v7.widget.CardView>


